{
  "private": true,
  "scripts": {
    "build": "npm run lint && npm run update-schema && npm run relay-compiler && npm run webpack",
    "lint": "eslint *.js src tools",
    "relay-compiler": "relay-compiler --src src --exclude data/** --schema src/data/schema.graphql",
    "start": "npm run relay-compiler && cross-env BABEL_ENV=es webpack-dev-server --hot --inline",
    "update-schema": "babel-node tools/updateSchema.js",
    "webpack": "cross-env NODE_ENV=production BABEL_ENV=es webpack -p"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "npm run update-schema",
      "git add src/data/schema.*"
    ]
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.3",
    "babel-plugin-relay": "^1.5.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "eslint-config-4catalyzer-react": "^0.3.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "farce": "^0.2.5",
    "file-loader": "^1.1.10",
    "found": "^0.3.8",
    "found-relay": "^0.3.0-alpha.1",
    "graphql": "^0.13.1",
    "graphql-relay": "^0.5.4",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "keycode": "^2.1.9",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-relay": "^1.5.0",
    "relay-compiler": "^1.5.0",
    "relay-local-schema": "^0.6.2",
    "relay-runtime": "^1.5.0",
    "style-loader": "^0.20.2",
    "todomvc-app-css": "^2.1.0",
    "todomvc-common": "^1.0.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  }
}
